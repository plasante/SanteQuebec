<h1>Connexion</h1>

<%= form_for :session, :url => sessions_path do |f| %>
  <div class="field">
    <%= f.label %(Courriel) %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label %(Mot de passe) %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit %(Soumettre) %>
  </div>
<% end %>

<p>Nouvel Utilisateur? <%= link_to "Inscription!", signup_path %></p>
